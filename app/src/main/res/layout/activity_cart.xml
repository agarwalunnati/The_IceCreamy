<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/background_new">


    <TextView
        android:id="@+id/cart_title"
        android:layout_width="377dp"
        android:layout_height="61dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="76dp"
        android:fontFamily="@font/magicbubble"
        android:text="MY CART"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="44sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:padding="16dp"
        android:layout_marginBottom="8dp">

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="115dp"
            android:layout_height="96dp"
            android:src="@drawable/brownie"
            android:layout_marginEnd="16dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/item_name_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Flingo Choco Brownie Cone"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/item_price_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹30"
                android:textSize="16sp"
                android:textColor="@color/black"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <Button
                    android:id="@+id/decrement_1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:text="-"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif"
                    android:backgroundTint="#D3D3D3"/>

                <TextView
                    android:id="@+id/item_quantity_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="16sp"
                    android:layout_marginHorizontal="8dp"
                    android:textColor="@color/black"/>

                <Button
                    android:id="@+id/increment_1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:text="+"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif"
                    android:backgroundTint="#D3D3D3"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:padding="16dp"
        android:layout_marginBottom="8dp">

        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="125dp"
            android:layout_height="108dp"
            android:src="@drawable/cookie_disc"
            android:layout_marginEnd="16dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/item_name_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Flingo Cookie Disc Cone"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/item_price_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹50"
                android:textSize="16sp"
                android:textColor="@color/black"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <Button
                    android:id="@+id/increment_2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:text="-"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif"
                    android:backgroundTint="#D3D3D3"/>

                <TextView
                    android:id="@+id/item_quantity_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="16sp"
                    android:layout_marginHorizontal="8dp"
                    android:textColor="@color/black"/>

                <Button
                    android:id="@+id/decrement_2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:text="+"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif"
                    android:backgroundTint="#D3D3D3"
                    />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/total_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total: ₹30"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/pay_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#2c5e86"
        android:text="PAY"
        android:textColor="@android:color/white"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/pay_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#2c5e86"
        android:text="Clear Cart"
        android:textColor="@android:color/white"
        android:layout_marginTop="16dp"/>
</LinearLayout>